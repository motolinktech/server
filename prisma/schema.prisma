generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../generated/prismabox"
}

model User {
  id                 String              @id @default(uuid(7))
  name               String
  email              String              @unique
  password           String?
  status             String              @default("PENDING")
  image              String?
  role               String              @default("USER")
  permissions        String[]            @default([])
  branches           String[]            @default([])
  isDeleted          Boolean             @default(false)
  updatedAt          DateTime            @updatedAt
  createdAt          DateTime            @default(now())
  verificationTokens VerificationToken[]

  @@map("users")
}

model VerificationToken {
  id        String   @id @default(uuid(7))
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("verification_tokens")
}

model HistoryTrace {
  id         String   @id @default(uuid(7))
  userId     String
  user       Json
  action     String
  entityType String
  entityId   String
  changes    Json
  createdAt  DateTime @default(now())

  @@map("history_traces")
}

model Branch {
  id          String        @id @default(uuid(7))
  name        String
  address     String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  groups      Group[]
  regions     Region[]
  deliverymen Deliveryman[]

  @@map("branches")
}

model Group {
  id          String   @id @default(uuid(7))
  name        String
  description String?
  branchId    String
  branch      Branch   @relation(fields: [branchId], references: [id], onDelete: Restrict)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  @@map("groups")
}

model Region {
  id          String        @id @default(uuid(7))
  name        String
  description String?
  branchId    String
  branch      Branch        @relation(fields: [branchId], references: [id], onDelete: Restrict)
  updatedAt   DateTime      @updatedAt
  createdAt   DateTime      @default(now())
  deliverymen Deliveryman[]

  @@map("regions")
}

model Deliveryman {
  id           String   @id @default(uuid(7))
  name         String
  document     String
  phone        String
  contractType String
  mainPixKey   String
  secondPixKey String?
  thridPixKey  String?
  agency       String?
  account      String?
  vehicleModel String?
  vehiclePlate String?
  vehicleColor String?
  branchId     String
  branch       Branch   @relation(fields: [branchId], references: [id], onDelete: Restrict)
  regionId     String?
  region       Region?  @relation(fields: [regionId], references: [id], onDelete: SetNull)
  isDeleted    Boolean  @default(false)
  isBlocked    Boolean  @default(false)
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  @@map("deliverymen")
}
