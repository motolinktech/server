generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../generated/prismabox"
}

model User {
  id                 String              @id @default(uuid(7))
  name               String
  email              String              @unique
  password           String?
  document           String?             @unique
  phone              String?
  status             String              @default("PENDING")
  image              String?
  role               String              @default("USER")
  permissions        String[]            @default([])
  branches           String[]            @default([])
  birthDate          DateTime?
  files              Json[]              @default([])
  isDeleted          Boolean             @default(false)
  updatedAt          DateTime            @updatedAt
  createdAt          DateTime            @default(now())
  verificationTokens VerificationToken[]
  events             Event[]

  @@map("users")
}

model VerificationToken {
  id        String   @id @default(uuid(7))
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("verification_tokens")
}

model HistoryTrace {
  id         String   @id @default(uuid(7))
  userId     String
  user       Json
  action     String
  entityType String
  entityId   String
  changes    Json
  createdAt  DateTime @default(now())

  @@map("history_traces")
}

model Branch {
  id          String        @id @default(uuid(7))
  name        String
  code        String        @unique
  address     String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  groups      Group[]
  regions     Region[]
  deliverymen Deliveryman[]
  clients     Client[]

  @@map("branches")
}

model Group {
  id          String   @id @default(uuid(7))
  name        String
  description String?
  branchId    String
  branch      Branch   @relation(fields: [branchId], references: [id], onDelete: Restrict)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  clients     Client[]

  @@map("groups")
}

model Region {
  id          String        @id @default(uuid(7))
  name        String
  description String?
  branchId    String
  branch      Branch        @relation(fields: [branchId], references: [id], onDelete: Restrict)
  updatedAt   DateTime      @updatedAt
  createdAt   DateTime      @default(now())
  deliverymen Deliveryman[]
  clients     Client[]

  @@map("regions")
}

model Deliveryman {
  id              String           @id @default(uuid(7))
  name            String
  document        String
  phone           String
  contractType    String
  mainPixKey      String
  secondPixKey    String?
  thridPixKey     String?
  agency          String?
  account         String?
  vehicleModel    String?
  vehiclePlate    String?
  vehicleColor    String?
  files           String[]         @default([])
  branchId        String
  branch          Branch           @relation(fields: [branchId], references: [id], onDelete: Restrict)
  regionId        String?
  region          Region?          @relation(fields: [regionId], references: [id], onDelete: SetNull)
  isDeleted       Boolean          @default(false)
  isBlocked       Boolean          @default(false)
  updatedAt       DateTime         @updatedAt
  createdAt       DateTime         @default(now())
  workShiftSlots  WorkShiftSlot[]
  blocks          ClientBlock[]
  paymentRequests PaymentRequest[]
  invites         Invite[]

  @@map("deliverymen")
}

model Client {
  id                  String               @id @default(uuid(7))
  name                String
  cnpj                String
  cep                 String
  street              String
  number              String
  complement          String?
  city                String
  neighborhood        String
  uf                  String
  observations        String               @default("")
  regionId            String?
  region              Region?              @relation(fields: [regionId], references: [id], onDelete: SetNull)
  groupId             String?
  group               Group?               @relation(fields: [groupId], references: [id], onDelete: SetNull)
  contactName         String
  contactPhone        String               @default("")
  provideMeal         Boolean              @default(false)
  branchId            String
  branch              Branch               @relation(fields: [branchId], references: [id], onDelete: Restrict)
  isDeleted           Boolean              @default(false)
  updatedAt           DateTime             @updatedAt
  createdAt           DateTime             @default(now())
  commercialCondition CommercialCondition?
  workShiftSlots      WorkShiftSlot[]
  blocks              ClientBlock[]
  plannings           Planning[]
  invites             Invite[]

  @@map("clients")
}

model CommercialCondition {
  id                        String   @id @default(uuid(7))
  clientId                  String   @unique
  client                    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  bagsStatus                String   @default("UNKNOWN")
  bagsAllocated             Int      @default(0)
  paymentForm               String[] @default([])
  dailyPeriods              String[] @default([])
  guaranteedPeriods         String[] @default([])
  deliveryAreaKm            Float    @default(0)
  isMotolinkCovered         Boolean  @default(false)
  guaranteedDay             Int      @default(0)
  guaranteedDayWeekend      Int      @default(0)
  guaranteedNight           Int      @default(0)
  guaranteedNightWeekend    Int      @default(0)
  clientDailyDay            Decimal  @default(0) @db.Decimal(16, 2)
  clientDailyDayWknd        Decimal  @default(0) @db.Decimal(16, 2)
  clientDailyNight          Decimal  @default(0) @db.Decimal(16, 2)
  clientDailyNightWknd      Decimal  @default(0) @db.Decimal(16, 2)
  clientPerDelivery         Decimal  @default(0) @db.Decimal(16, 2)
  clientAdditionalKm        Decimal  @default(0) @db.Decimal(16, 2)
  deliverymanDailyDay       Decimal  @default(0) @db.Decimal(16, 2)
  deliverymanDailyDayWknd   Decimal  @default(0) @db.Decimal(16, 2)
  deliverymanDailyNight     Decimal  @default(0) @db.Decimal(16, 2)
  deliverymanDailyNightWknd Decimal  @default(0) @db.Decimal(16, 2)
  deliverymanPerDelivery    Decimal  @default(0) @db.Decimal(16, 2)
  deliverymanAdditionalKm   Decimal  @default(0) @db.Decimal(16, 2)
  updatedAt                 DateTime @updatedAt
  createdAt                 DateTime @default(now())

  @@map("commercial_conditions")
}

model ClientBlock {
  id            String      @id @default(uuid(7))
  deliverymanId String
  deliveryman   Deliveryman @relation(fields: [deliverymanId], references: [id], onDelete: Cascade)
  clientId      String
  client        Client      @relation(fields: [clientId], references: [id], onDelete: Cascade)
  reason        String?
  createdAt     DateTime    @default(now())

  @@unique([clientId, deliverymanId])
  @@map("client_blocks")
}

model WorkShiftSlot {
  id                      String           @id @default(uuid(7))
  deliverymanId           String?
  deliveryman             Deliveryman?     @relation(fields: [deliverymanId], references: [id], onDelete: SetNull)
  clientId                String
  client                  Client           @relation(fields: [clientId], references: [id], onDelete: Cascade)
  status                  String
  contractType            String
  shiftDate               DateTime
  startTime               DateTime
  endTime                 DateTime
  period                  String[]         @default(["daytime"])
  auditStatus             String
  logs                    Json[]
  checkInAt               DateTime?
  checkOutAt              DateTime?
  isFreelancer            Boolean          @default(false)
  inviteSentAt            DateTime?
  inviteToken             String?          @unique
  inviteExpiresAt         DateTime?
  trackingConnected       Boolean          @default(false)
  trackingConnectedAt     DateTime?
  deliverymanAmountDay      Decimal          @default(0) @db.Decimal(16, 2)
  deliverymanAmountNight    Decimal          @default(0) @db.Decimal(16, 2)
  deliverymanPaymentType    String           @default("")
  deliverymenPaymentValue   String           @default("")
  paymentForm               String           @default("DAILY")
  guaranteedQuantityDay     Int              @default(0)
  guaranteedQuantityNight   Int              @default(0)
  deliverymanPerDeliveryDay   Decimal        @default(0) @db.Decimal(16, 2)
  deliverymanPerDeliveryNight Decimal        @default(0) @db.Decimal(16, 2)
  isWeekendRate             Boolean          @default(false)
  updatedAt                 DateTime         @updatedAt
  createdAt                 DateTime         @default(now())
  paymentRequests         PaymentRequest[]
  invites                 Invite[]

  @@index([clientId, shiftDate])
  @@index([deliverymanId, shiftDate])
  @@index([inviteToken])
  @@map("work_shift_slots")
}

model PaymentRequest {
  id              String        @id @default(uuid(7))
  workShiftSlotId String
  workShiftSlot   WorkShiftSlot @relation(fields: [workShiftSlotId], references: [id], onDelete: Cascade)
  deliverymanId   String
  deliveryman     Deliveryman   @relation(fields: [deliverymanId], references: [id], onDelete: Restrict)
  amount          Decimal       @db.Decimal(16, 2)
  status          String        @default("NEW")
  logs            Json[]        @default([])
  updatedAt       DateTime      @updatedAt
  createdAt       DateTime      @default(now())

  @@map("payment_requests")
}

model Invite {
  id              String        @id @default(uuid(7))
  token           String        @unique
  status          String        @default("PENDING")
  workShiftSlotId String
  workShiftSlot   WorkShiftSlot @relation(fields: [workShiftSlotId], references: [id], onDelete: Cascade)
  deliverymanId   String
  deliveryman     Deliveryman   @relation(fields: [deliverymanId], references: [id], onDelete: Cascade)
  clientId        String
  client          Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientName      String
  clientAddress   String
  shiftDate       DateTime
  startTime       DateTime
  endTime         DateTime
  sentAt          DateTime      @default(now())
  expiresAt       DateTime
  respondedAt     DateTime?
  updatedAt       DateTime      @updatedAt
  createdAt       DateTime      @default(now())

  @@index([token])
  @@index([workShiftSlotId])
  @@map("invites")
}

model Event {
  id          String   @id @default(uuid(7))
  name        String
  description String?
  date        DateTime
  startHour   DateTime
  endHour     DateTime
  branches    String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String
  createdBy   User     @relation(fields: [createdById], references: [id])

  @@map("events")
}

model Planning {
  id           String   @id @default(uuid(7))
  clientId     String
  client       Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  branchId     String
  plannedDate  DateTime
  plannedCount Int
  period       String   @default("diurno")
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  @@unique([clientId, plannedDate, period])
  @@map("plannings")
}
